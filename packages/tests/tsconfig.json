{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "es2022",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "./build",
    "composite": true,

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true
  }
}
